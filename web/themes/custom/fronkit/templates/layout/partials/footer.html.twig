{% if page.footer or page.footer_brand or page.footer_bottom %}
  <footer class="footer bg-gray-900">
    <div class="container">
      <div class="row py-10">
        <div class="col-md-3 col-12 pe-0 pb-6">
          {% if page.footer_brand %}
            {{ page.footer_brand }}
          {% endif %}
        </div>

        <div class="col-md-8 col-12 offset-md-1 ps-md-0">
          {% if page.footer %}
            {{ page.footer }}
          {% endif %}
        </div>
      </div>
    </div>

    {% if page.footer_bottom %}
      {{ page.footer_bottom }}
    {% endif %}
  </footer>
{% endif %}

